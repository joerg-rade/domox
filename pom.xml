<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <project.version>0.1.0-SNAPSHOT</project.version>
        <isis-version>2.0.0-M6</isis-version>
        <stanford-corenlp.version>4.0.0</stanford-corenlp.version>
        <lombok.version>1.18.20</lombok.version>
        <file.encoding>UTF-8</file.encoding>
        <!--
        https://wiki.int.kn/rest/api/space/SeaAirLog ->
        {"id":118915073,"key":"SeaAirLog","name":"GSC > Sea/AirLog","type":"global","_links":{"webui":"/display/SeaAirLog","collection":"/rest/api/space","base":"https://wiki.int.kn","context":"","self":"https://wiki.int.kn/rest/api/space/SeaAirLog"},"_expandable":{"metadata":"","icon":"","description":"","homepage":"/rest/api/content/118587520"}}
        How to get Confluence page ID -> https://confluence.atlassian.com/confkb/how-to-get-confluence-page-id-648380445.html
        https://wiki.int.kn/rest/api/content/591236456
        -->
        <rootConfluenceUrl>https://wiki.int.kn</rootConfluenceUrl>
        <spaceKey>SeaAirLog</spaceKey>
        <ancestorId>591236456</ancestorId>
        <username>joerg.rade</username>
        <password>pw</password>
    </properties>

    <parent>
        <groupId>org.apache.isis.app</groupId>
        <artifactId>isis-app-starter-parent</artifactId>
        <version>2.0.0-M6</version>
        <relativePath/>
    </parent>

    <groupId>org.apache.isis.domox</groupId>
    <artifactId>domox</artifactId>
    <version>0.1.0-SNAPSHOT</version>

    <name>DoMoX Parent</name>

    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.sahli.asciidoc.confluence.publisher</groupId>
                <artifactId>asciidoc-confluence-publisher-maven-plugin</artifactId>
                <configuration>
                    <asciidocRootFolder>docs</asciidocRootFolder>
                    <rootConfluenceUrl>https://wiki.int.kn</rootConfluenceUrl>
                    <spaceKey>SeaAirLog</spaceKey>
                    <ancestorId>591236456</ancestorId>
                    <username>joerg.rade</username>
                    <password>pw</password>
                    <attributes>
                        <confluencePublisherVersion>${project.version}</confluencePublisherVersion>
                    </attributes>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencyManagement>
        <dependencies>

            <!-- this project's own modules -->
            <dependency>
                <groupId>org.apache.isis.domox</groupId>
                <artifactId>domox-domain</artifactId>
            </dependency>
            <dependency>
                <groupId>org.apache.isis.domox</groupId>
                <artifactId>domox-domain</artifactId>
                <version>${project.version}</version>
                <scope>test</scope>
                <type>test-jar</type>
            </dependency>
            <dependency>
                <groupId>org.apache.isis.domox</groupId>
                <artifactId>domox-webapp</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.stanford.nlp</groupId>
                <artifactId>stanford-corenlp</artifactId>
                <version>${stanford-corenlp.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.stanford.nlp</groupId>
                <artifactId>stanford-corenlp</artifactId>
                <version>${stanford-corenlp.version}</version>
                <classifier>models</classifier>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <modules>
        <module>domox-domain</module>
        <module>domox-webapp</module>
        <module>domox-service</module>
    </modules>

</project>
