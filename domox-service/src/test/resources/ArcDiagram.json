{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 600,
  "height": 100,
  "padding": 0,
  "data": [
    {
      "name": "table",
      "values": [
        {
          "index": 0,
          "word": "A",
          "pos": 28,
          "color": "magenta"
        },
        {
          "index": 1,
          "word": "language",
          "pos": 35,
          "color": "cyan"
        },
        {
          "index": 2,
          "word": "tape",
          "pos": 43,
          "color": "cyan"
        },
        {
          "index": 3,
          "word": "has",
          "pos": 91,
          "color": "CHARTREUSE"
        },
        {
          "index": 4,
          "word": "a",
          "pos": 10,
          "color": "red"
        },
        {
          "index": 5,
          "word": "title",
          "pos": 53,
          "color": "red"
        },
        {
          "index": 6,
          "word": "language",
          "pos": 19,
          "color": "red"
        },
        {
          "index": 7,
          "word": "and",
          "pos": 87,
          "color": "red"
        },
        {
          "index": 8,
          "word": "level",
          "pos": 87,
          "color": "red"
        },
        {
          "index": 9,
          "word": ".",
          "pos": 87,
          "color": "red"
        }
      ]
    },
    {
      "name": "edges",
      "values": [
        {
          "source": 0,
          "target": 1,
          "value": 1,
          "label": "DT"
        },
        {
          "source": 1,
          "target": 6,
          "value": 1
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "rect:mouseover",
          "update": "datum"
        },
        {
          "events": "rect:mouseout",
          "update": "{}"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "word"
      },
      "range": "width",
      "padding": 1.0,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "pos"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "interactive": true,
      "name": "dots",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
        },
        "update": {
          "x": {
            "scale": "xscale",
            "field": "word"
          },
          "width": {
            "scale": "xscale",
            "band": 0.0
          },
          "y": {
            "scale": "yscale",
            "value": 0
          },
          "size": {
            "value": 100
          },
          "fill": {
            "field": "color"
          }
        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "blue"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "tooltip.word",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "signal": "tooltip.pos",
            "offset": -2
          },
          "text": {
            "signal": "tooltip.pos"
          },
          "fillOpacity": [
            {
              "test": "isNaN(tooltip.pos)",
              "value": 0
            },
            {
              "value": 1
            }
          ]
        }
      }
    },
    {
      "type": "path",
      "name": "arcs",
      "from": {
        "data": "edges"
      },
      "encode": {
        "update": {
          "stroke": {
            "value": "black"
          },
          "strokeOpacity": {
            "value": 1
          },
          "strokeWidth": {
            "field": "value"
          }
        }
      },
      "transform": [
        {
          "type": "lookup",
          "from": "dots",
          "key": "datum.index",
          "fields": [
            "datum.source",
            "datum.target"
          ],
          "as": [
            "sourceNode",
            "targetNode"
          ]
        },
        {
          "type": "linkpath",
          "sourceX": {
            "expr": "min(datum.sourceNode.x, datum.targetNode.x)"
          },
          "targetX": {
            "expr": "max(datum.sourceNode.x, datum.targetNode.x)"
          },
          "sourceY": {
            "expr": "min(datum.sourceNode.y, datum.targetNode.y)"
          },
          "targetY": {
            "expr": "max(datum.sourceNode.y, datum.targetNode.y)"
          },
          "shape": "arc"
        }
      ]
    }
  ]
}